#!/usr/bin/python
import subprocess, sys, getopt
  pcapProcess = subprocess.Popen (["sudo", "./pcap", "", "5000"], stdout =
				  subprocess.PIPE, stderr =
				  subprocess.PIPE) 
while True:
  
 nextLine = pcapProcess.stdout.readline ()
 if nextLine == '' and pcapProcess.poll () != None:
   break

 sys.stdout.write (nextLine)
 sys.stdout.flush ()pcapOut = pcapProcess.communicate ()[0]

 returnValue = pcapProcess.returncode 

if (returnValue == 0):
  return pcapOut
